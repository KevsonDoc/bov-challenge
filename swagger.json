{
  "openapi": "3.0.0",
  "info": {
    "title": "Bov chalenge",
    "description": "Bov chalenge API documentation",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:3333",
      "description": "Development server"
    }
  ],
  "tags": [
    {
      "name": "api"
    },
    {
      "name": "authentication"
    },
    {
      "name": "farmer"
    },
    {
      "name": "farm"
    }
  ],
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  },
  "paths": {
    "/api": {
      "summary": "Get a list of users",
      "get": {
        "tags": ["api"],
        "summary": "Returns a greeting message",
        "responses": {
          "200": {
            "description": "A successful response with the greeting message",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Hello, World!"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/farmer": {
      "summary": "Farmer ground endpoint",
      "post": {
        "summary": "Create a new farmer",
        "tags": ["farmer"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["name", "email", "cpf", "password"],
                "properties": {
                  "name": {
                    "type": "string",
                    "description": "Farmer's name"
                  },
                  "email": {
                    "type": "string",
                    "format": "email",
                    "description": "Farmer's e-mail"
                  },
                  "cpf":  {
                    "type": "string",
                    "format": "cpf",
                    "description": "Farmer's CPF",
                    "minLength": 14,
                    "maxLength": 14
                  },
                  "password": {
                    "type": "string",
                    "maxLength": 8,
                    "description": "Farmer's password"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "A successful response with message",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Farmer created"
                    }
                  }
                }
              }
            }
          }
        }
      },
      "get": {
        "summary": "Get a farmer logged informations",
        "tags": ["farmer"],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "201": {
            "description": "A successful response with your farmer data",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "name": {
                      "type": "string",
                      "example": "Your bearer token"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/auth/sign": {
      "summary": "Sign a farm in application",
      "post": {
        "summary": "Authenticate farmer in application",
        "tags": ["authentication"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["email", "password"],
                "properties": {
                  "email": {
                    "type": "string",
                    "description": "Farmer's e-mail"
                  },
                  "password": {
                    "type": "string",
                    "description": "Farmer's password"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "A successful response with your token",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "token": {
                      "type": "string",
                      "example": "Your bearer token"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}