{
  "openapi": "3.0.0",
  "info": {
    "title": "Sample API",
    "description": "A sample API to demonstrate Swagger documentation",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:3000",
      "description": "Development server"
    }
  ],
  "paths": {
    "/api": {
      "get": {
        "summary": "Returns a greeting message",
        "responses": {
          "200": {
            "description": "A successful response with the greeting message",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Hello, World!"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}